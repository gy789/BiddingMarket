<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.biddingmarket.mapper.UserMapper">
    <select id="login" resultType="Users" parameterType="java.util.Map">
        select * from users where username = #{username} and password = #{password}
    </select>
    <insert id="register" parameterType="com.biddingmarket.entity.Users">
        insert into users (username,password,role,phone_number) value (#{username},#{password},#{role},#{phone_number})
    </insert>
    <select id="getAllUsers" resultType="Users" parameterType="java.util.Map">
        select * from users
    </select>
    <delete id="deleteUsers" parameterType="com.biddingmarket.entity.Users">
        delete from users where uid = #{uid}
    </delete>
    <update id="updateUser" parameterType="com.biddingmarket.entity.Users">
        update users set username = #{username},password = #{password}, role = #{role} where uid = #{uid}
    </update>
    <select id="getUsers" resultType="Users" parameterType="java.util.Map">
        select * from users where uid = #{uid}
    </select>
    <insert id="addUser" parameterType="com.biddingmarket.entity.Users">
        insert into users (username,password,role,phone_number) value (#{username},#{password},#{role},#{phone_number})
    </insert>

    <select id="getUnBoundUser" resultType="Users" parameterType="java.util.Map">
        select * from users
        where role = 1 and uid not in (select uid from company where uid is not null)
    </select>
</mapper>